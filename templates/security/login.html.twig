{% extends 'base.html.twig' %}

{% block title %}Log in!{% endblock %}

{% block body %}
<div>
    <form method="post" class="m-2 ml-3">
        <a class="btn btn-warning" href="{{ path("home") }}">Accueil</a>
        {% if error %}
            <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
        {% endif %}

        {% if app.user %}
            <div class="mb-3">
                Vous êtes connecté en tant que {{ app.user.username }}, <a href="{{ path('app_logout') }}">Se déconnecter</a>
            </div>
        {% endif %}

        <h3 class="mt-3">Connectez vous</h3>

        <label for="inputEmail">Email</label>
        <input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control col-md-3" required autofocus>
        <label for="inputPassword">Mot de passe</label>
        <input type="password" name="password" id="inputPassword" class="form-control col-md-3" required>

        <input type="hidden" name="_csrf_token"
            value="{{ csrf_token('authenticate') }}"
        >

        {#
            Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
            See https://symfony.com/doc/current/security/remember_me.html
        #}

            <div class="checkbox my-2">
                <label>
                    <input type="checkbox" name="_remember_me"> Se souvenir de moi
                </label>
            </div>

        <button class="btn btn-lg btn-primary" type="submit">
            Se connecter
        </button>
        <div class="col-6 col-12-md mt-5">
            <div class="row ">
                <p class="">Pas encore inscrit?</p>
            </div>
            <div class="row ">
                <a class="btn btn-lg btn-primary mt-2" href="register">Inscrivez-vous ici</a>
            </div>
        </div>
    </form>
</div>
{% endblock %}
